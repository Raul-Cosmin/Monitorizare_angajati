<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="monitoring.domain.Employer"
           table="employers">
        <id type="java.lang.Integer" name="id" column="id">
            <generator class="increment"/>
        </id>
        <property
                name="firstName"
                column="firstname"/>
        <property
                name="lastName"
                column="lastname"/>
        <property
                name="email"
                column="email"/>

        <property name="password"
                  column="password"/>
    </class>
</hibernate-mapping>