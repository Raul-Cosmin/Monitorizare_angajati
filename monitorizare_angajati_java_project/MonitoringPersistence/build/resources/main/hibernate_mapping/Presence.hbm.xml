<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="monitoring.domain.Presence"
           table="presences">
        <id type="java.lang.Integer" name="id" column="id">
            <generator class="increment"/>
        </id>
        <property
                name="arrivalTime"
                column="arrival_time"/>
        <property
                name="departureTime"
                column="departure_time"/>
        <property
                name="idEmployee"
                column="id_employee"/>

    </class>
</hibernate-mapping>